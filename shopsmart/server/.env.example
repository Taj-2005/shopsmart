# Database
DATABASE_URL="postgresql://user:password@localhost:5432/shopsmart?schema=public"

# Server
PORT=4000
NODE_ENV=development

# Frontend (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# JWT
JWT_ACCESS_SECRET=your-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRES=1h
JWT_REFRESH_EXPIRES_DAYS=30

# Auth
MAX_FAILED_LOGINS=5
LOCKOUT_MINUTES=15

# Cookies
COOKIE_REFRESH_NAME=refreshToken

# SMTP (optional; if not set, verification/reset emails are logged only)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@shopsmart.example.com
