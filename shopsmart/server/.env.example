# ShopSmart API — copy to .env and set values
# Required
DATABASE_URL="mysql://user:password@localhost:3306/shopsmart"
JWT_ACCESS_SECRET="your-access-secret-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars"

# Server
PORT=4000
NODE_ENV=development

# CORS — exact frontend origin (no trailing slash)
FRONTEND_URL="http://localhost:3000"

# Cookie-based auth
COOKIE_ACCESS_NAME=accessToken
COOKIE_REFRESH_NAME=refreshToken
# For cross-site cookies when frontend/backend share a domain (e.g. .example.com)
# COOKIE_DOMAIN=.example.com
# In production set COOKIE_SECURE=true (HTTPS). For cross-site use COOKIE_SAME_SITE=none
# COOKIE_SECURE=true
# COOKIE_SAME_SITE=none

# JWT TTL
JWT_ACCESS_EXPIRES=1h
JWT_REFRESH_EXPIRES_DAYS=30

# Lockout
MAX_FAILED_LOGINS=5
LOCKOUT_MINUTES=15

# Email (optional — verification, password reset)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@shopsmart.example.com
